body {
  background: white;
  color: #666666;
}
p{
    font-weight: 300;
}
.top-bar{
    padding: 20px;
    background-color: #fff;
}

.title-area img{
     width: 278px;
    height: 102px;
    margin-left: 5em;
}
.top-bar-section li:not(.has-form) a:not(.button),
.top-bar-section li:not(.has-form) a:not(.button):hover{
    color: #9d9d9c;
    background: #fff;
}

.top-bar-section li.active:not(.has-form) a:not(.button),
.top-bar-section li.active:not(.has-form) a:not(.button):hover {
    color: #e86d72;
    background: white;
}
.menu-centrado{
    margin-top: 20px !important;
    margin-right: 40px !important;
}
.top-bar-section ul li > a{
    font-size: 1em;
    font-weight: 300;
}
.top-bar-section ul img{
    width: 18px;
    height: 18px;
    margin-right: 5px;
}
.top-bar input{
    font-size: 1em;
    font-weight: 300;
    border: none;
    box-shadow: none;
    position: relative;
    top: -36px;
    left: 20px;
}
.top-bar  input[type="text"]:focus {
    box-shadow: none;
}

.header{
    height: 700px;
    background-image: url('<%= asset_path 'manos.jpg' %>');
    background-position: bottom;
    background-size: 100%;
    background-repeat: no-repeat;
    padding: 10% 15% 0;
}
.header h1{
    margin-top: 30px;
    font-family: 'roboto_slabbold';
}
.header p{
    font-size:1.2em;
}
.representacion{
    height: 700px;
    padding: 1% 0;
    background: #f7f7f8;
}
.representacion h1{
    line-height: 0.6;
    margin-top: 30px;
    font-family: 'roboto_slabbold';
}
.representacion p{
    line-height: 1;
}
.representacion img{
    margin-top: 1.5em;
}
.subheader {
    font-size: 2em;
    line-height: 0;
    color: #222222;
    font-weight: normal;
    margin-top: 0em;
    margin-bottom: 3rem;
}
.asistencia-referencia{
    font-size: 1.8em;
    font-weight: 100;
    margin-top: -0.6em;
    margin-bottom: 0;
}
.valor-referencia{
    font-size: 2.75rem;
    color:#222222;
    font-family: 'roboto_slabthin';
    margin-top: -0.2em;
}
#porcentaje>.valor-referencia{
    font-size: 2.75rem;
    line-height: 1;
    color:#222222;
    font-family: 'roboto_slabthin';
}
.representacion hr{
    margin: 0.7rem 0 1.1875rem;
}

.cargo-referencia{
    margin-top: -1.2em;
    margin-bottom: -3em !important;
}

.fichas{
    background: #f7f7f8;
}
.fichas h4{
    font-family: 'roboto_slabregular';
}
.fichas h6{
    font-family: 'roboto_slabregular';
}
.ficha{
    background: #fff;
    margin-bottom: 2em;
    border-radius: 6px;
}
.bandera{
    width: 86px;
    height: 86px;
}

.titulo-fichas{
    margin-top: -4em !important;
}
.deptos{
    font-size: 0.8em;
    line-height: 0.8em;
}
.fichas .valor-referencia{
    font-size: 2rem;
    color:#222222;
    font-family: 'roboto_slabregular';
    margin-top: 0;
}
.fichas .cargo-referencia{
    margin-top: -1.8em;
}

.temas{
    padding-top: 40px;
}

.temas h4{
    margin-top: 40px;
    font-family: 'roboto_slabregular';
}
.temas ul{
    list-style: none;
    margin-left: 0;
}
.temas li{
    color:#e86d72;
}
.temas .button{
    background: none;
    color: #e86d72;
    font-family: 'roboto_slablight';
}
.footer{
    padding:3.5em;
    margin-top: 50px;
    height: 150px;
    background: #74c5cd;
    color: white;
}
.footer p{
    line-height: 0.5em;
    font-weight: 300;
    font-weight: 100;
    font-size: 1.3em;
    letter-spacing: 0.05em;
}
strong{
    font-weight: 600;
}
@media only screen and (min-width:1025px){
.row {
      max-width: 100%; }
}


