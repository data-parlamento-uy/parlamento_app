              <stop  offset="0.35" style="stop-color:#FFFFFF"/>
              <stop  offset="0.65" style="stop-color:#FFFFFF"/>
              <stop  offset="0.65" style="stop-color:#F37D7C"/>
            </linearGradient>
            <circle fill="url(#SVGID_2_)" cx="23" cy="23" r="23"/>
          </svg>
        </div>
        <%= render partial: 'political_party_composition_data', locals: { political_party: PoliticalParty.find_by_name('partido frente amplio') } %>
