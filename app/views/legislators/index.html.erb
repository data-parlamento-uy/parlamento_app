<div class="small-12 columns camara">
  <div class="large-5 large-offset-6">
    <hr>
    <div class="button-group ">
        <%= render partial: 'filters_by_chamber' %>
    </div>
  </div>
</div>
<div class="small-12 columns text-right">
  <div class="small-8 small-offset-3 ">
    <%= render partial: 'other_filters' %>
  </div>
</div>

<!-- #### FICHAS DE PARLAMENTOS #### -->
<div class="small-12 columns fichas">

<%= @legislators.each_slice(3) do |legislators_row| %>
    <div clas="row">
      <%= render partial: 'shared/legislator_data', locals: { legislator: legislators_row[0] }  %>
      <%= render partial: 'shared/legislator_data', locals: { legislator: legislators_row[1] }  %>
      <%= render partial: 'shared/legislator_data', locals: { legislator: legislators_row[2] }  %>
    </div>
<% end %>


</div>

